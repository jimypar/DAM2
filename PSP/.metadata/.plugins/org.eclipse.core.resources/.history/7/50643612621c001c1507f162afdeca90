package figuras;

public class Cuadrado extends Figura {

	private int lado;

	public Cuadrado(int x, int y, int lado) {
		super(x, y);
		this.lado = lado;
	}

	@Override
	public int calcularArea() {

		return lado * lado;

	}

	@Override
	void dibujar() {
		
		System.out.println("Cuadrado");

	}

}
